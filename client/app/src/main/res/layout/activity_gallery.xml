<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/main">

    <View
        android:layout_width="417dp"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:gravity="center"
        android:text="비어있음"
        android:textSize="18dp"
        android:fontFamily="@font/ibm_regular"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/photoTrash"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/trash"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/photoPlus"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:layout_marginTop="65dp"
        android:background="@drawable/photoplus"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/move"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/move"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:paddingTop="4dp"
        android:background="@drawable/chat"
        android:scaleType="fitCenter"
        android:textColor="@color/colorRed"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="417dp"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="Orientation">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photoList"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_marginTop="117dp"
            android:gravity="center"
            android:padding="5dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/moveOk"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginTop="556dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/select"
        android:elevation="0dp"
        android:fontFamily="@font/ibm_medium"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:stateListAnimator="@null"
        android:text="앨범 선택하기"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.ImageView
            android:id="@+id/albumListView"
            android:layout_width="350dp"
            android:layout_height="410dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/text"
            android:elevation="30dp"
            android:gravity="center"
            android:padding="0dp"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.408"
            app:spanCount="2" />

        <android.widget.TextView
            android:id="@+id/albumListViewTop"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="-350dp"
            android:layout_marginTop="175dp"
            android:elevation="30dp"
            android:fontFamily="@font/ibm_medium"
            android:gravity="left"
            android:padding="10dp"
            android:text=" >>  앨범 선택"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            />

        <View
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginStart="-346dp"
            android:layout_marginTop="215dp"
            android:background="#D3D3D3"
            android:elevation="30dp"
            android:visibility="invisible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/albumList"
            android:layout_width="320dp"
            android:layout_height="330dp"
            android:layout_marginStart="-330dp"
            android:layout_marginTop="225dp"
            android:clipToPadding="false"
            android:elevation="30dp"
            android:gravity="center"
            android:padding="0dp"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>