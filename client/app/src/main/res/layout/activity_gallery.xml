<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photoList"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="117dp"
        android:gravity="center"
        android:padding="5dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1" />

</LinearLayout>

    <View
        android:layout_width="417dp"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:gravity="center"
        android:text="비어있음"
        android:textSize="18dp"
        android:fontFamily="@font/ibm_regular"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="@+id/bottom_navigation_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/move"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/sizetrash"
        android:gravity="center_vertical"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:textSize="13sp"
        android:text="앨범 이동"
        android:fontFamily="@font/ibm_regular"
        android:elevation="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/moveOk"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginTop="556dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/select"
        android:elevation="10dp"
        android:fontFamily="@font/ibm_medium"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:stateListAnimator="@null"
        android:text="앨범 선택하기"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/photoPlus"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:layout_marginTop="65dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/sizephotoplus"
        android:scaleType="fitCenter"
        android:text=" 사진 추가"
        android:fontFamily="@font/ibm_regular"
        android:padding="2dp"
        android:textSize="13sp"
        android:elevation="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/photoTrash"
        android:layout_width="120dp"
        android:gravity="center_vertical"
        android:layout_height="32dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/sizetrash"
        android:scaleType="fitCenter"
        android:text="사진 휴지통"
        android:fontFamily="@font/ibm_regular"
        android:elevation="10dp"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.widget.Button
        android:id="@+id/chat"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:paddingTop="4dp"
        android:drawableTop="@drawable/sizechat"
        android:background="@drawable/select"
        android:scaleType="fitCenter"
        android:textColor="@color/colorRed"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:itemIconTint="#2196F3"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_nav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.ImageView
            android:id="@+id/albumListView"
            android:layout_width="350dp"
            android:layout_height="410dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/text"
            android:gravity="center"
            android:padding="0dp"
            android:elevation="30dp"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.408"
            app:spanCount="2" />

        <android.widget.TextView
            android:id="@+id/albumListViewTop"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="175dp"
            android:layout_marginStart="-350dp"
            android:gravity="left"
            android:fontFamily="@font/ibm_medium"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="   앨범 선택"
            android:textColor="@color/black"
            android:elevation="30dp"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

        <View
        android:layout_width="340dp"
        android:layout_height="2dp"
        android:layout_marginTop="215dp"
        android:layout_marginStart="-346dp"
        android:elevation="30dp"
        android:visibility="invisible"
        android:background="#D3D3D3"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumList"
        android:layout_width="320dp"
        android:layout_height="330dp"
        android:layout_marginTop="225dp"
        android:clipToPadding="false"
        android:layout_marginStart="-330dp"
        android:background="@drawable/text"
        android:gravity="center"
        android:padding="0dp"
        android:elevation="30dp"
        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        app:spanCount="2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>