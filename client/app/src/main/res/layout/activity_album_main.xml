<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AlbumMain">

  <!--<FrameLayout
      android:id="@+id/main_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
      app:layout_constraintEnd_toEndOf="@+id/bottom_navigation_view"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" >
  </FrameLayout>
-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#ffffff"
      tools:ignore="Orientation">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumList"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:padding="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" />

    <ImageButton
        android:id="@+id/albumplus"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="545dp"
        android:layout_marginStart="-230dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/plusicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  </LinearLayout>

  <View
      android:layout_width="417dp"
      android:layout_height="2dp"
      android:background="#D3D3D3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.220" />

  <TextView
      android:id="@+id/empty"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_marginTop="430dp"
      android:gravity="center"
      android:text="비어있음"
      android:textSize="18dp"
      android:fontFamily="@font/notosans_medium"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/searchText"
      android:hint="앨범 이름을 입력하세요."
      android:gravity="center"
      android:padding="0dp"
      android:layout_width="234dp"
      android:layout_height="35dp"
      android:layout_marginTop="60dp"
      android:background="@drawable/text"
      android:fontFamily="@font/notosans_medium"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
      android:id="@+id/search"
      android:layout_width="42dp"
      android:layout_height="35dp"
      android:layout_marginTop="60dp"
      android:background="@drawable/text"
      android:scaleType="fitCenter"
      android:src="@drawable/search"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.77"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="#234567" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/auto"
      android:layout_width="200dp"
      android:layout_height="32dp"
      android:layout_marginTop="120dp"
      android:background="@drawable/edittext"
      android:drawableLeft="@drawable/sizephotoplus"
      android:scaleType="fitCenter"
      android:padding="2dp"
      android:text="자동 정렬"
      android:elevation="5dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.98"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/albumTrash"
      android:layout_width="200dp"
      android:layout_height="32dp"
      android:layout_marginTop="120dp"
      android:background="@drawable/edittext"
      android:drawableLeft="@drawable/sizetrash"
      android:scaleType="fitCenter"
      android:padding="2dp"
      android:text="앨범 휴지통"
      android:elevation="5dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.02"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_navigation_view"
      android:layout_width="410dp"
      android:layout_height="85dp"
      app:itemTextColor="@color/black"
      app:labelVisibilityMode="labeled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.1"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/menu_bottom_nav" />
</androidx.constraintlayout.widget.ConstraintLayout>