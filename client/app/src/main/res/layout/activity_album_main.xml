<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AlbumMain">

  <FrameLayout
      android:id="@+id/main_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
      app:layout_constraintEnd_toEndOf="@+id/bottom_navigation_view"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" >
  </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/albumList"
          android:layout_width="match_parent"
          android:layout_height="452dp"
          android:layout_marginTop="170dp"
          android:clipToPadding="false"
          android:gravity="center"
          android:padding="5dp"
          app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
          app:spanCount="2" />

      <ImageButton
          android:id="@+id/albumplus"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginStart="-50dp"
          android:layout_marginTop="108dp"
          android:background="#00000000"
          android:elevation="10dp"
          android:scaleType="fitCenter"
          android:src="@drawable/plusicon" />

      <android.widget.Button
          android:id="@+id/auto"
          android:layout_width="40dp"
          android:layout_height="35dp"
          android:layout_marginStart="-327dp"
          android:layout_marginTop="115dp"
          android:background="@drawable/photoplus"
          android:elevation="10dp"
          android:fontFamily="@font/ibm_regular"
          android:scaleType="fitCenter" />

    </LinearLayout>

  <View
      android:layout_width="417dp"
      android:layout_height="2dp"
      android:background="#D3D3D3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.220" />

  <TextView
      android:id="@+id/empty"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_marginTop="380dp"
      android:gravity="center"
      android:text="비어있음"
      android:textSize="18dp"
      android:fontFamily="@font/ibm_regular"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <android.widget.EditText
      android:id="@+id/searchText"
      android:hint="앨범 이름, 장소..."
      android:gravity="center_vertical"
      android:drawableLeft="@drawable/sizesearch"
      android:layout_width="270dp"
      android:layout_height="35dp"
      android:layout_marginTop="60dp"
      android:textSize="15sp"
      android:padding="3dp"
      android:textColor="@color/black"
      android:background="@drawable/edittext"
      android:fontFamily="@font/ibm_regular"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.48"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <android.widget.Button
      android:id="@+id/albumTrash"
      android:layout_width="40dp"
      android:layout_height="35dp"
      android:layout_marginTop="115dp"
      android:background="@drawable/trash"
      android:scaleType="fitCenter"
      android:elevation="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.042"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_navigation_view"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      app:itemIconSize="20dp"
      app:itemTextColor="@color/black"
      app:labelVisibilityMode="unlabeled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:menu="@menu/menu_bottom_nav" />
</androidx.constraintlayout.widget.ConstraintLayout>